#!/bin/sh

if [ "$1" = "light" ]; then
  config=$HOME/.config/alacritty/alacritty-light.yml
else
  config=$HOME/.config/alacritty/alacritty.yml
fi

jumpline=$(find $PROJECTS -type f -name "config" | grep "\.git\/config" | sed 's|/\.git/config||g' | $(fzfcmd) --bind=ctrl-y:accept --tac)

project=$(find $PROJECTS -type f -name "config" | grep "\.git\/config" | sed 's|/\.git/config||g' | rofi -p "project >" -dmenu)

[ -n $project ] || exit

cat << EOF | last-command
exec alacritty --config-file $config --working-directory $project
EOF