#!/bin/sh

DB=$HOME/.config/chromium/Default/History
TMPDIR=$(mktemp -dt "history-search.XXXXXXXX" --tmpdir=$XDG_RUNTIME_DIR)
TMPDB=$TMPDIR/History
BROWSER=chromium

function finish {
  rm -rf $TMPDIR
}
trap finish EXIT

cp $DB $TMPDB
item=$(sqlite3 $TMPDB "select title, url from urls" | rofi -p "url >" -dmenu)
url=$(echo -n "$item" | rev | cut -f 1 -d '|' | rev)

if [ "$url" = "" ]; then
  exit
fi

$BROWSER $url & disown
