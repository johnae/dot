# start rofi (as a window switcher)
bindsym $mod+Tab exec "rofi -fuzzy -lines 3 -eh 2 -padding 300 -fullscreen -opacity '85' -color-normal '$bg-color,$text-color,$bg-color,$bg-color,$selected-color' -color-window '$bg-color' -font 'System San Fransisco Display 30' -show window"

